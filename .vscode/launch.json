{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Concepts (Current File)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/packages/concepts/out/**/*.js"
            ],
            "preLaunchTask": "tsc: build - packages/concepts/tsconfig.json",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Movies",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/packages/projects/movies/src/app.ts",
            "outFiles": [
                "${workspaceFolder}/packages/projects/movies/out/**/*.js"
            ],
            "preLaunchTask": "tsc: build - packages/projects/movies/tsconfig.json",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
